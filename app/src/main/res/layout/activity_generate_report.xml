<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/grey_100"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="5dp">
                <TextView
                    android:id="@+id/title_user_name"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/app_name"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_user_name"
                    android:id="@+id/title_user_bio"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:text="@string/generatereportstring"
                    android:textSize="14sp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"/>
            </RelativeLayout>


            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/fourhoursPhotos1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@android:color/white"
                        android:drawableRight="@drawable/icon_browse"
                        android:hint="PICTURE NUMBER 1"
                        android:padding="18dp"
                        android:textColor="@color/grey_800"/>
                    <Button
                        android:id="@+id/fourhoursPhotosUnSelect1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/grey_200"
                        android:padding="18dp"
                        android:textColor="@color/grey_800"
                        android:hint="Un Select"
                        android:visibility="gone"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_fourhoursPhotos1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/fourhoursPhotos2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@android:color/white"
                        android:drawableRight="@drawable/icon_browse"
                        android:hint="PICTURE NUMBER 2"
                        android:padding="18dp"
                        android:textColor="@color/grey_800"/>
                    <Button
                        android:id="@+id/fourhoursPhotosUnSelect2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/grey_200"
                        android:padding="18dp"
                        android:textColor="@color/grey_800"
                        android:hint="Un Select"
                        android:visibility="gone"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/img_fourhoursPhotos2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/fourhoursPhotos3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@android:color/white"
                        android:drawableRight="@drawable/icon_browse"
                        android:hint="PICTURE NUMBER 1"
                        android:padding="18dp"
                        android:textColor="@color/grey_800"/>
                    <Button
                        android:id="@+id/fourhoursPhotosUnSelect3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/grey_200"
                        android:padding="18dp"
                        android:textColor="@color/grey_800"
                        android:hint="Un Select"
                        android:visibility="gone"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_fourhoursPhotos3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/fourhoursPhotos4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@android:color/white"
                        android:drawableRight="@drawable/icon_browse"
                        android:hint="PICTURE NUMBER 1"
                        android:padding="18dp"
                        android:textColor="@color/grey_800"/>
                    <Button
                        android:id="@+id/fourhoursPhotosUnSelect4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/grey_200"
                        android:padding="18dp"
                        android:textColor="@color/grey_800"
                        android:hint="Un Select"
                        android:visibility="gone"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/img_fourhoursPhotos4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                </LinearLayout>
            </android.support.v7.widget.CardView>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="40dp">

                <Button
                    android:id="@+id/btn_back"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/shadow_border"
                    android:drawableStart="@drawable/icon_back"
                    android:paddingStart="5dp"
                    android:text="BACK"
                    android:onClick="goBakcFromGenerateReport"/>

                <Button
                    android:id="@+id/btn_generate_report"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/shadow_border"
                    android:drawableEnd="@drawable/icon_create"
                    android:paddingEnd="5dp"
                    android:text="GENERATE REPORT"
                    android:onClick="generateReport"/>
            </LinearLayout>
            <ProgressBar
                android:id="@+id/progressBar_final"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>